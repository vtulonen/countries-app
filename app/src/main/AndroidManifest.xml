<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.countries_app">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Countries_app">
        <activity android:name=".QuizActivity" />
        <activity android:name=".QuizSettingsActivity" />
        <activity android:name=".ViewCountryActivity" />
        <activity
            android:name=".BrowseCountriesActivity"
            android:configChanges="screenLayout|orientation|screenSize"
            android:label="@string/browse_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- To prevent reloading activity on orientation change -->
    </application>

</manifest>