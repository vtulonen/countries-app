<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/iv_flag_content_description"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:paddingBottom="16dp"
        tools:context=".ViewCountryActivity">


        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/iv_flag_content_description"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/tv_nativeName"
            android:text="@string/label_tv_nativeName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_nativeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Native name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/tv_region"
            android:text="@string/label_tv_region"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Region, subregion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/tv_capital"
            android:text="@string/label_tv_capital"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="CapitalName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/tv_population"
            android:text="@string/label_tv_population"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_population"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Population" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/tv_population"
            android:text="@string/label_tv_currencies"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_currencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Currency_1\nCurrency_2" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_view_location_on_maps"
            android:onClick="openMapsClick"
            android:textSize="18sp" />

    </LinearLayout>



</ScrollView>




